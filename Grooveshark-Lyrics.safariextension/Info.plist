<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Author</key>
	<string>Lucas Torri</string>
	<key>CFBundleDisplayName</key>
	<string>Grooveshark-Lyrics</string>
	<key>CFBundleIdentifier</key>
	<string>com.github.lucastorri.grooveshark-lyrics</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>Chrome</key>
	<dict>
		<key>Global Page</key>
		<string>global.html</string>
		<key>Toolbar Items</key>
		<array>
			<dict>
				<key>Command</key>
				<string>grooveshark-lyrics</string>
				<key>Identifier</key>
				<string>grooveshark-lyrics-button</string>
				<key>Image</key>
				<string>icon.png</string>
				<key>Label</key>
				<string>Grooveshark Lyrics</string>
				<key>Palette Label</key>
				<string>Grooveshark Lyrics</string>
				<key>Tool Tip</key>
				<string>Go to Grooveshark Lyrics</string>
			</dict>
		</array>
	</dict>
	<key>Content</key>
	<dict>
		<key>Scripts</key>
		<dict>
			<key>End</key>
			<array>
				<string>grooveshark-lyrics.js</string>
			</array>
		</dict>
		<key>Whitelist</key>
		<array>
			<string>http://*.grooveshark.com/*</string>
		</array>
	</dict>
	<key>Description</key>
	<string>When listening to Grooveshark music, simply use this plugin to turn Grooveshark Lyrics on!</string>
	<key>ExtensionInfoDictionaryVersion</key>
	<string>1.0</string>
	<key>Permissions</key>
	<dict>
		<key>Website Access</key>
		<dict>
			<key>Level</key>
			<string>All</string>
		</dict>
	</dict>
	<key>Update Manifest URL</key>
	<string>http://github.com/lucastorri/grooveshark-lyrics-safari/raw/master/update-manifest.plist</string>
	<key>Website</key>
	<string>http://nettofarah.github.com/grooveshark-lyrics/</string>
</dict>
</plist>
